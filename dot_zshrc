# asdf - lazy loaded
export ASDF_DATA_DIR="$HOME/.asdf"
export PATH="$ASDF_DATA_DIR/shims:$PATH"

# Lazy load asdf
asdf() {
  unset -f asdf
  . "$HOME/.asdf/asdf.sh"
  asdf "$@"
}

# append completions to fpath
fpath=(${ASDF_DIR}/completions $fpath)
# initialise completions with ZSH's compinit
autoload -Uz compinit && compinit


# Aliases
alias la='ls -lAFh'

# 3-Way Multi-Account 1Password bridge for GitHub CLI
# Uses MACHINE_HOSTNAME variable from .zshrc.local (e.g., "zen" or "zenling")
gh() {
    local current_context="personal"
    local hostname="${MACHINE_HOSTNAME:-zen}"  # Default to "zen" if not set

    # 1. Determine the context based on directory
    if [[ "$PWD" == "$HOME/dev/rl" ]] || [[ "$PWD" == "$HOME/dev/rl"/* ]]; then
        current_context="work"
    elif [[ "$PWD" == "$HOME/dev/zen" ]] || [[ "$PWD" == "$HOME/dev/zen"/* ]]; then
        current_context="zendient"
    fi

    # 2. Fetch if token is missing OR if we changed contexts
    if [[ -z "$GH_TOKEN" ]] || [[ "$GH_TOKEN_CONTEXT" != "$current_context" ]]; then
        echo "üîê Switching to '$current_context' context. Fetching token via 1Password..."

        local FETCHED_TOKEN=""

        # 3. Route to the correct 1Password item
        if [[ "$current_context" == "work" ]]; then
            # --- ROCKET LAB ---
            FETCHED_TOKEN=$( \
                cd /tmp && \
                op.exe item get "GitHub Token: WSL GitHub CLI [$hostname]" --vault "Employee" --account "rocketlab.1password.com" \
                --fields label=Token --reveal 2>/dev/null | tr -d '\r')

        elif [[ "$current_context" == "zendient" ]]; then
            # --- ZENDIENT LABS ---
            FETCHED_TOKEN=$( \
                cd /tmp && \
                op.exe item get "GitHub Token: WSL GitHub CLI [$hostname] @zendient" --vault "1Password Service Accounts" --account "my.1password.com" \
                --fields label=Token --reveal 2>/dev/null | tr -d '\r')

        else
            # --- PERSONAL (divv) ---
            FETCHED_TOKEN=$( \
                cd /tmp && \
                op.exe item get "GitHub Token: WSL GitHub CLI [$hostname] @divv" --vault "1Password Service Accounts" --account "my.1password.com" \
                --fields label=Token --reveal 2>/dev/null | tr -d '\r')
        fi

        # 4. Save and record state
        if [[ -n "$FETCHED_TOKEN" ]]; then
            export GH_TOKEN="$FETCHED_TOKEN"
            export GH_TOKEN_CONTEXT="$current_context"
        else
            echo "‚ùå 1Password token lookup failed for the $current_context account."
            return 1
        fi
    fi

    # 5. Run the actual command
    command gh "$@"
}

# Fuzzy Matching
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh


# Python - lazy loaded
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"

# Lazy load pyenv
pyenv() {
  unset -f pyenv
  eval "$(pyenv init -)"
  pyenv "$@"
}

# Homebrew
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# pnpm
export PNPM_HOME="/home/divv/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end


